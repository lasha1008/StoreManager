@using StoreManager.Web.Models;
@model ProductModel

@{
    ViewData["Title"] = "Product Details";
}

@{
    string formattedPrice = Model.Price % 1 == 0
        ? String.Format("{0:C0}", Model.Price)
        : String.Format("{0:C}", Model.Price);
}

<h2>@Model.Name</h2>
<h3 style="color: green">Price: @formattedPrice</h3>
<p>Id:@Model.Id<p>
<p>Description: @Model.Description</p>

<button class="btn btn-primary" id="editButton">Edit</button>

<div id="editFormContainer" style="display: none;">
    <form action="/Product/Edit" method="post">
        <input type="hidden" name="Id" value="@(Model.Id)" />

        <div>
            <h3>Edit Product</h3>
            <div>
                <label for="Name" class="111">Product Name:</label>
                <input type="text" id="Name" name="Name" value="@(Model.Name)" />
            </div>

            <div>
                <label for="Price">Price:</label>
                <input type="text" id="Price" name="Price" value="@(Model.Price)" />
            </div>

            <div>
                <label for="Description">Description:</label>
                <input type="text" id="Description" name="Description" value="@(Model.Description)" />
            </div>

            <div>
                <input type="submit" value="Save" />
            </div>
        </div>
    </form>
</div>

        @section Scripts {
    <script>
        $(document).ready(function () {
            $("#editButton").click(function () {
                $("#editFormContainer").toggle();
            });
        });
    </script>
}
